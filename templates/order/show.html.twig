{% extends 'base.html.twig' %}

{% block title %}Order{% endblock %}

{% block body %}
    <h1>Order</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ order.id }}</td>
            </tr>
            <tr>
                <th>FistName</th>
                <td>{{ order.fistName }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td>{{ order.lastName }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ order.price }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ order.active ? 'Yes' : 'No' }}</td>
            </tr>

            <tr>
                <th>Matériels Loués</th>
                <td class="details-value">
                    {% if order.orderMaterials|length > 0 %}
                        <ul>
                            {% for item in order.orderMaterials %}
                                <li>{{ item.material.name }} (Quantité: {{ item.quantity }})</li>
                            {% endfor %}
                        </ul>
                    {% else %}
                        Aucun matériel loué
                    {% endif %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_order_index') }}">back to list</a>

    {# <a href="{{ path('app_order_edit', {'id': order.id}) }}">edit</a> #}

    {{ include('order/_delete_form.html.twig') }}
{% endblock %}
